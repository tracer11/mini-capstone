<% @item.errors.full_messages.each do |error| %>
  <h1><%= error %></h1>
<% end %>




<h1>New Car</h1>

<%= form_tag '/items', method: :post do %>
  <div class="form-group">
    <label for="exampleInputName2">Name</label>
    <input type="text" class="form-control" id="exampleInputName2" placeholder="Nissan GTR" name="name">
  </div>
  <div class="form-group">
    <label for="exampleInputPrice2">Price</label>
    <input type="text" class="form-control" id="exampleInputPrice2" placeholder="1400" name="price">
  </div>
  <div class="form-group">
    <label for="exampleInputDescription2">Description</label>
    <input type="text" class="form-control" id="exampleInputDescription" placeholder="description" name="description">
  </div>
  <div id="supplier" class="form-group">
    Supplier: <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>
  <input type="submit" class="btn btn-default" value="Create New Listing">
<% end %>